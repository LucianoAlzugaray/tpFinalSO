<Ventana>:
  BoxLayout:
    orientation: 'vertical'
    size: root.size
    FloatLayout:
      top: 0
      size_hint: 1, 0.8
      id: vis
      canvas:
        Rectangle:
          source: 'fondo.jpg'
          size: self.size
          pos: self.pos
        Line:
          rectangle: self.x,self.y, self.width, self.height
    BoxLayout:
      size_hint: 1, 0.2
      orientation: 'horizontal'
      padding: 20
      spacing: 20
      Button:
        text: "Reiniciar"
        on_press: app.matar_a_todos()
      Button:
        text: "Compilar"
        on_press: app.compilar()

<Proceso@Image>
  source: 'pelota.png'
  size_hint: 0.1, 0.1
